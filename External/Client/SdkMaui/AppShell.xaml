<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Deve.External.ClientApp.Maui"
    xmlns:strings="clr-namespace:Deve.External.ClientApp.Maui.Resources.Strings"
    x:Class="Deve.External.ClientApp.Maui.AppShell"
    Shell.FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="Fixed"
    Title="Maui">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid>
                <Image Source="logo.png" HeightRequest="90" Aspect="AspectFit" HorizontalOptions="Center"
                       SemanticProperties.Description="app logo" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <ShellContent Route="login" Title="" ContentTemplate="{DataTemplate local:LoginPage}" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled" />

    <ShellContent Route="clients" Title="{x:Static strings:AppResources.Clients}" ContentTemplate="{DataTemplate local:ClientsPage}" />

    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout Padding="10">
                <Label Text=".NET DEVEloper Template" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Text="{Binding Source={x:Static local:Globals.AppVersion}}" HorizontalOptions="Center" />
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>
    
</Shell>
