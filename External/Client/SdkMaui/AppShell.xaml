<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Deve.External.ClientApp.Maui"
    xmlns:strings="clr-namespace:Deve.External.ClientApp.Maui.Resources.Strings"
    x:Class="Deve.External.ClientApp.Maui.AppShell"
    Shell.FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="Fixed"
    Title="Maui">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid>
                <Image Source="logo.png" HeightRequest="90" Aspect="AspectFit" HorizontalOptions="Center"
                       SemanticProperties.Description="app logo" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <ShellContent Route="clients" Title="{x:Static strings:AppResources.Clients}" ContentTemplate="{DataTemplate local:ClientsPage}" />
    <ShellContent Route="cities" Title="{x:Static strings:AppResources.Cities}" ContentTemplate="{DataTemplate local:CitiesPage}" />
    <ShellContent Route="states" Title="{x:Static strings:AppResources.States}" ContentTemplate="{DataTemplate local:StatesPage}" />
    <ShellContent Route="countries" Title="{x:Static strings:AppResources.Countries}" ContentTemplate="{DataTemplate local:CountriesPage}" />

    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout Padding="10" Orientation="Vertical">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="{x:Static local:Globals.LoggerUser}" FontSize="12" VerticalOptions="Center" />
                    <Button Text="{x:Static strings:AppResources.Logout}" Clicked="LogoutClicked" FontSize="12" VerticalOptions="Center" Style="{StaticResource LinkButton}" />
                </StackLayout>
                <Label Grid.ColumnSpan="2" Text=".NET DEVEloper Template" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Grid.ColumnSpan="2" Text="{x:Static local:Globals.AppVersion}" HorizontalOptions="Center" FontSize="11" />
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>
    
</Shell>
