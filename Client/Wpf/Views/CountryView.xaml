<v:BaseEditView x:Class="Deve.ClientApp.Wpf.Views.CountryView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:Deve.ClientApp.Wpf"
                xmlns:v="clr-namespace:Deve.ClientApp.Wpf.Views"
                xmlns:ctrl="clr-namespace:Deve.ClientApp.Wpf.Controls"
                xmlns:strings="clr-namespace:Deve.ClientApp.Wpf.Resources.Strings"
                xmlns:fa="http://schemas.fontawesome.com/icons/svg"
                xmlns:vm="clr-namespace:Deve.ClientApp.Wpf.ViewModels"
                d:DataContext="{d:DesignInstance Type=vm:CountryViewModel}"
                mc:Ignorable="d"
                Title="{x:Static strings:AppResources.Country}"
                Width="300" MaxWidth="300" SizeToContent="Height"
                ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" MaxWidth="300">
            <Border BorderBrush="Black" BorderThickness="1" MaxWidth="300" Style="{StaticResource MainBorder}">
                <Grid MaxWidth="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.ColumnSpan="2" Grid.Row="0" Content="{x:Static strings:AppResources.Country}" Style="{StaticResource Headline}" />

                    <Label Grid.ColumnSpan="2" Grid.Row="1" Content="{x:Static strings:AppResources.Name}" Style="{StaticResource RequiredFieldLabel}" />
                    <TextBox x:Name="uxName" Grid.ColumnSpan="2" Grid.Row="2" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsIdle}" MaxLength="20" KeyDown="OnNameKeyDown" />

                    <Label Grid.ColumnSpan="2" Grid.Row="3" Content="{x:Static strings:AppResources.IsoCode}" Style="{StaticResource RequiredFieldLabel}" />
                    <TextBox x:Name="uxIsoCode" Grid.Column="0" Grid.Row="4" Text="{Binding IsoCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsIdle}" MaxLength="2" CharacterCasing="Upper" KeyDown="OnIsoCodeKeyDown" />

                    <Button Grid.Column="0" Grid.Row="6" Content="{x:Static strings:AppResources.Cancel}" Margin="0,10,5,0" Command="{Binding CancelCommand}" Visibility="{Binding IsIdle, Converter={StaticResource BooleanToVisibility}}" Style="{StaticResource SecondaryButton}" />
                    <Button Grid.Column="1" Grid.Row="6" Content="{x:Static strings:AppResources.Save}" Margin="5,10,0,0" Command="{Binding SaveCommand}" Visibility="{Binding IsIdle, Converter={StaticResource BooleanToVisibility}}" />

                    <fa:ImageAwesome Grid.ColumnSpan="2" Grid.Row="6" Height="20" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibility}}" Margin="0,10,0,0" HorizontalAlignment="Center" Style="{StaticResource LoadingImageAwesome}" />
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</v:BaseEditView>
