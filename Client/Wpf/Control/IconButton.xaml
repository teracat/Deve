<Button x:Class="Deve.ClientApp.Wpf.Control.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deve.ClientApp.Wpf.Control"
             xmlns:fa="http://schemas.fontawesome.com/icons/svg"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             x:Name="root"
             Background="Transparent" Cursor="Hand" BorderThickness="0">
    <fa:ImageAwesome Icon="{Binding Icon, ElementName=root}" PrimaryColor="{Binding IconColor, ElementName=root}" />
</Button>
